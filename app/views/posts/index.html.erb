<h1><%= t 'books_app.page_title.user_posts', username: @user.name %></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'books_app.book_id' %></th>
      <th><%= t 'books_app.title' %></th>
      <th><%= t 'books_app.author' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @posts %>
<br>
