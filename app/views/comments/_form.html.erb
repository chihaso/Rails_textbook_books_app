<%= form_with(model: comment, local: true) do |form| %>
  <%= render "layouts/show_errors_when_creating", instance: comment %>

  <div class="field">
    <%= form.label :memo, t(".comment") %>
    <%= form.text_area :memo %>
  </div>

  <div>
    <% if book_id %>
      <%= hidden_field_tag :book_id, book_id %>
    <% elsif report_id %>
      <%= hidden_field_tag :report_id, report_id %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
