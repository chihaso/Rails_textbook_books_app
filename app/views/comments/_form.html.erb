<%= form_with(model: comment, local: true) do |form| %>
  <%= render "layouts/show_errors_when_creating", instance: comment %>

  <div class="field">
    <%= form.label :memo, t(".comment") %>
    <%= form.text_area :memo %>
  </div>

  <div>
    <%= set_comment_destination(book_id: book_id, report_id: report_id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
