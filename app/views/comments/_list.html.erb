<div class="comments_area">
  <h2><%= t ".comments" %></h2>
  <div class="comments">
    <% comments.each do |comment| %>
      <div class="comment">
        <p><span class="user_name"><%= comment.user.name %></span> <span class="post_time"><%= t(".post_at", time: comment.updated_at) %></span></p>
        <pre><%= comment.memo %></pre>
        <% if current_user == comment.user %>
          <%= link_to t(".edit"), edit_comment_path(comment) %>
          <%= link_to t(".delete"), comment, method: :delete, data: { confirm: t('books_app.confirm.reconfirm') } %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
