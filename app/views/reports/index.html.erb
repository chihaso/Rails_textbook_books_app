<h1><%= t '.index' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.title' %></th>
      <th><%= t '.user' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.user.name %></td>
        <td><%= link_to t('.show'), report %></td>
      <% if current_user == report.user %>
        <td><%= link_to t('.edit'), edit_report_path(report) %></td>
        <td><%= link_to t('.destroy'), report, method: :delete, data: { confirm: t('books_app.confirm.reconfirm') } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @reports %>
<br>

<%= link_to t('.new_report'), new_report_path %>
