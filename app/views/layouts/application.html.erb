<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to_if request.host.split('.').first != 'ja', '日本語',   "http://ja.localhost:3000#{request.path}"%> |
    <%= link_to_if request.host.split('.').first != 'en', 'English', "http://en.localhost:3000#{request.path}" %>
    <p id="notice"><%= notice %></p>
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <%= t("users.shared.login_user", username: current_user.email) %>
        <%= link_to t("users.shared.links.top"), books_path, class: 'navbar-link' %> |
        <%= link_to t("users.shared.links.show_profile"), user_path(current_user.id), class: 'navbar-link' %> |
        <%= link_to t("users.shared.links.sign_out"), destroy_user_session_path, method: :delete, class: 'navbar-link' %>
      <% else %>
        <%= link_to t("users.shared.links.top"), books_path, class: 'navbar-link' %> |
        <%= link_to t("users.shared.links.sign_up"), new_user_registration_path, class: 'navbar-link'  %> |
        <%= link_to t("users.shared.links.sign_in"), new_user_session_path, class: 'navbar-link'  %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
