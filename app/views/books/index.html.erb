<p id="notice"><%= notice %></p>

<%= link_to_if request.host.split('.').first != 'ja', '日本語',   "http://ja.localhost:3000#{request.path}"%> |
<%= link_to_if request.host.split('.').first != 'en', 'English', "http://en.localhost:3000#{request.path}" %>

<h1><%= t 'books_app.page_title.index' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'books_app.title' %></th>
      <th><%= t 'books_app.memo' %></th>
      <th><%= t 'books_app.author' %></th>
      <th><%= t 'books_app.picture' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('books_app.show'), book %></td>
        <td><%= link_to t('books_app.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('books_app.destroy'), book, method: :delete, data: { confirm: t('books_app.confirm.reconfirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @books %>
<br>
<%= link_to t('books_app.new_book'), new_book_path %>
